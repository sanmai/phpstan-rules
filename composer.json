{
    "name": "sanmai/phpstan-rules",
    "description": "Custom PHPStan rules for enforcing code quality standards",
    "license": "Apache-2.0",
    "type": "phpstan-extension",
    "keywords": [
        "dev",
        "static analysis"
    ],
    "authors": [
        {
            "name": "Alexey Kopytko",
            "email": "alexey@kopytko.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "phpstan/phpstan": "^2.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.8",
        "friendsofphp/php-cs-fixer": "^3.17",
        "infection/infection": ">=0.10.5",
        "league/pipeline": "^0.3 || ^1.0",
        "php-coveralls/php-coveralls": "^2.4.1",
        "phpunit/phpunit": "^9.5 || ^10.0",
        "sanmai/later": "^0.1.7",
        "sanmai/pipeline": "^6.17",
        "vimeo/psalm": ">=2"
    },
    "suggest": {
        "phpstan/extension-installer": "Allows automatic registration of PHPStan extensions"
    },
    "autoload": {
        "psr-4": {
            "Sanmai\\PHPStanRules\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sanmai\\PHPStanRules\\Tests\\": "tests/"
        },
        "classmap": [
            "tests/Fixtures/"
        ]
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "infection/extension-installer": true
        },
        "sort-packages": true
    },
    "extra": {
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        }
    }
}
